<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#CFEDF4"
    tools:context=".MovieIfo.MovieInformationActivity">

    <TextView
        android:id="@+id/questionTextBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#BBF8F3"
        android:text="Movie Title"
        android:textColor="#3F51B5"
        android:textSize="27dp" />

    <EditText
        android:id="@+id/editMovieTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionTextBox"
        android:background="#88D3CD"
        android:hint="Search Main Actor Here"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#3F51B5"/>

    <Button
        android:id="@+id/searchActorButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editMovieTitle"
        android:background="#CFF4F1"
        android:fontFamily="sans-serif-black"
        android:text="@string/movie_info"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#CFF4F1" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchActorButton"
        android:background="#CFF4F1"
        android:soundEffectsEnabled="false" />

    <TextView
        android:id="@+id/ActorResultsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressBar"
        android:layout_toLeftOf="@id/helpButton"
        android:background="#CFF4F1"
        android:text=""
        android:textColor="#3F51B5"
        android:textSize="25dp" />

    <Button
        android:id="@+id/helpButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressBar"
        android:layout_alignParentRight="true"
        android:text="aa"
        android:textColor="#CFF4F1"
        />

    <ListView
        android:id="@+id/listViewAT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ActorResultsText"
        android:background="#CFF4F1"
        android:verticalScrollbarPosition="right"
        android:layout_above="@id/movieSeeSaved"/>

    <Button
        android:id="@+id/movieSeeSaved"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="aa"
        android:textColor="#CFF4F1"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

</RelativeLayout>