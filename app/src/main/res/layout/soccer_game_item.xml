<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/soccer_game_images"
                android:layout_width="149dp"
                android:layout_height="101dp"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="0dp"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <TextView
                android:id="@+id/soccer_game_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/soccer_game_images"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/soccer_game_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textColor="#979494"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/soccer_game_title"
                app:layout_constraintTop_toBottomOf="@+id/soccer_game_title" />

            <TextView
                android:id="@+id/soccer_game_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="Description"
                android:textColor="#736F6F"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/soccer_game_date"
                app:layout_constraintTop_toBottomOf="@+id/soccer_game_date" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>